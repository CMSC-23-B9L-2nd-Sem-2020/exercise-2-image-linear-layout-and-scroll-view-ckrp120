<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:maxHeight="5dp"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="#E8050404"
        android:textSize="20sp"
        app:fontFamily="@font/amarante" />

    <ImageView
        android:id="@+id/charView"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/disneylogo" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#63BEF0"
        android:fontFamily="@font/amarante"
        android:includeFontPadding="false"
        android:text="@string/start_name" />

    <Button
        android:id="@+id/retry"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#63BEF0"
        android:fontFamily="@font/amarante"
        android:text="@string/retry_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="@string/blank"
            android:textColor="#E2000000"
            android:textSize="20sp"
            app:fontFamily="sans-serif-condensed" />
    </ScrollView>

</LinearLayout>